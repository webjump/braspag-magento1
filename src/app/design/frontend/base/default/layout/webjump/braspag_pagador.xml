<?xml version="1.0"?>
<layout version="0.1.0">

    <webjump_braspag_mpi>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>webjump/braspag_pagador/js/bpmpi/lib/BP.Mpi.3ds20.conf.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>webjump/braspag_pagador/js/bpmpi/bpmpi.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>webjump/braspag_pagador/js/bpmpi/bpmpi-renderer.js</name>
            </action>
        </reference>
        <reference name="content">
            <block type="webjump_braspag_pagador/checkout_bpmpi" name="webjump.braspag_pagador.bpmpi" as="bpmpi" template="webjump/braspag_pagador/checkout/bpmpi.phtml" />
        </reference>
    </webjump_braspag_mpi>

    <checkout_onepage_index>
        <update handle="webjump_braspag_mpi" />
    </checkout_onepage_index>

    <checkout_onepage_review>
        <reference name="checkout.onepage.review.button">
            <action method="setTemplate">
                <template>webjump/braspag_pagador/checkout/bpmpi/review/button.phtml</template>
            </action>
        </reference>
    </checkout_onepage_review>

    <braspag_payment_reorder translate="label">
        <label>Braspag Payment reorder</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="webjump_braspag_pagador/form_payment_reorder" />
        </reference>
        <reference name="right">
            <remove name="sale.reorder.sidebar"/>
            <remove name="catalog.compare.sidebar" />
            <remove name="right.reports.product.viewed" />
            <block type="webjump_braspag_pagador/pay_info" />
        </reference>
    </braspag_payment_reorder>

	<braspag_checkout_success>
        <reference name="checkout.success">
            <block type="webjump_braspag_pagador/checkout_success" name="webjump_braspag_pagador.checkout.success" template="webjump/braspag_pagador/checkout/success.phtml" />
        </reference>
	</braspag_checkout_success>

    <checkout_onepage_success>
    	<update handle="braspag_checkout_success" />
    </checkout_onepage_success>

    <checkout_multishipping_success>
    	<update handle="braspag_checkout_success" />
    </checkout_multishipping_success>
</layout>
