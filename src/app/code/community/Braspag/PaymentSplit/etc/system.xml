<?xml version="1.0"?>
<config>    
    <sections>
        <braspag_paymentsplit translate="label" module="braspag_paymentsplit">
            <label>Payment Split</label>
            <tab>braspag</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <creditcard_transaction translate="label comment" module="braspag_paymentsplit">
                    <label>Credit Card Transactions</label>
                    <comment><![CDATA[Credit Card Transactions with Payment Split]]></comment>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <split_is_active translate="label">
                            <label>Enabled</label>
                            <comment><![CDATA[Indicates whether Credit Card Transactions with Split are Enabled.]]></comment>
                            <config_path>braspag_paymentsplit/creditcard_transaction/is_active</config_path>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </split_is_active>
                        <split_default_mdr translate="label">
                            <label>Default Store MDR</label>
                            <comment><![CDATA[Default MDR from Store.]]></comment>
                            <config_path>braspag_paymentsplit/creditcard_transaction/default_mdr</config_path>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <split_is_active>1</split_is_active>
                            </depends>
                        </split_default_mdr>
                        <split_default_fee translate="label">
                            <label>Default Store Fee</label>
                            <comment><![CDATA[Default Fee from Store.]]></comment>
                            <config_path>braspag_paymentsplit/creditcard_transaction/default_fee</config_path>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <split_is_active>1</split_is_active>
                            </depends>
                        </split_default_fee>
                        <split_is_active_store_participate_on_sales translate="label">
                            <label>Is active the store participation on sales?</label>
                            <comment><![CDATA[Indicates if is active the store participation on sales.]]></comment>
                            <config_path>braspag_paymentsplit/creditcard_transaction/is_active_store_participate_on_sales</config_path>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <split_is_active>1</split_is_active>
                            </depends>
                        </split_is_active_store_participate_on_sales>
                        <split_default_store_percentage_on_sales translate="label">
                            <label>Default Store Percentage on Sales</label>
                            <comment><![CDATA[Default Store Percentage on Sales.]]></comment>
                            <config_path>braspag_paymentsplit/creditcard_transaction/default_store_percentage_on_sales</config_path>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <split_is_active_store_participate_on_sales>1</split_is_active_store_participate_on_sales>
                            </depends>
                        </split_default_store_percentage_on_sales>
                        <split_default_store_amount_value_on_sales translate="label">
                            <label>Default Store Amount Value on Sales</label>
                            <comment><![CDATA[Default Store Amount Value on Sales.]]></comment>
                            <config_path>braspag_paymentsplit/creditcard_transaction/default_store_amount_value_on_sales</config_path>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <split_is_active_store_participate_on_sales>1</split_is_active_store_participate_on_sales>
                            </depends>
                        </split_default_store_amount_value_on_sales>
                    </fields>
                </creditcard_transaction>
